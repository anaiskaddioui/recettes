{% extends "base.html.twig" %}

{% block title %}
    Editer 
{% endblock %}

{% block body %}

    <div class="container m-auto">

        <h1 class="text-center my-5">Modifier les recettes</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
            {% for recette in recettes %}
                <tr>
                    <td>{{ recette.title }}</td>
                    <td><a href="{{ path('admin.recettes.edit', {id:recette.id}) }}" class="btn btn-secondary">Editer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}