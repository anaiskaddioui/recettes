{% extends 'base.html.twig' %}

{% block title "Homepage" %}

{% block body %}
    <div class="jumbotron text-center" style="background: #F3EBE0;">

        <h1 class="font-italic">Recettes</h1>

        <p>
            Lorem ipsum
        </p>
    </div>

    <div class="container" style="background: #F3EBE0;">

        <h2 class="text-center m-5">Nos derni√®res recettes</h2>

        <div class="row flex">

            {% for recette in recettes %}

                <div class="col-3">

                    <div class="card">
                        <div class="card-body bg-light">
                            <h3 class="card-title">
                                <a href="{{ path('recettes.show', {id: recette.id, slug:recette.slug}) }}" class="text-success font-italic">{{ recette.title }}</a>
                            </h3>
                            <div class="font-italic mb-3"></em>({{ recette.type.nom }})</em></div>
                            <p class="card-text">{{ recette.description }}</p>
                            <div class="text-primary font-italic">{{ recette.time }}</div>
                            <div class="text-info font-italic"></em>{{ recette.personnes }} personnes</em></div>
                        </div>



                        <div class="my-2 text-center">
                            <button class="btn btn-info"><a href="{{ path('recettes.show', {id: recette.id, slug:recette.slug}) }}" class="text-white font-italic">Voir la recette</a></button>
                        </div>    
                    </div>

                </div>

            {% endfor %}

        </div>

    </div>

{% endblock %}