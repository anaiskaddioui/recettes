{% extends "base.html.twig" %}

{% block title %}
    Recette
{% endblock %}

{% block body %}

<div class="container mt-4">

    <div class="text-center m-5 jumbotron">
        <h1 class="text-success font-italic">{{ recette.title }}</h1>
        <p><em>{{ recette.description }}</em></p>
    </div>

    <hr class="my-5">

    <div class="row justify-content-center mt-5">
        <div class="col-6">
            <p>{{ recette.preparation|nl2br }}</p>
        </div>
        <div class="col-2 font-italic">
            <p><em>{{ recette.time }}</em></p>
            <p>{{ recette.personnes }} personnes</p>            
        </div>

    </div>
</div>

{% endblock %}