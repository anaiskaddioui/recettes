{% extends "base.html.twig" %}

{% block title %}
    Recette
{% endblock %}

{% block body %}

<div class="container mt-4" style="border: border-box;">

    <div class="text-center m-5 bg-light" style="border-radius: 5px; margin: 15% auto; padding: 2%;">
        <h1 class="text-success font-italic text-center">{{ recette.title }}</h1>
        <p><em>{{ recette.description }}</em></p>
    </div>

    <hr class="my-5" style="border: 0.1em black solid; margin: auto; width: 50%; border-radius: 3px;">

    <div class="row justify-content-center mt-5 bg-light" style="border-radius: 5px; margin: 15% auto; width: 90%; padding: 2%;">
        <div class="col-6">
            <p>{{ recette.preparation|nl2br }}</p>
        </div>
        <div class="col-2 font-italic">
            <p><em>{{ recette.time }}</em></p>
            <p>{{ recette.personnes }} personnes</p>            
        </div>
    
      <div class="font-italic mb-3"></em>Recette propos√©e par {{ user }}</em></div>

    </div>

    <hr class="my-5" style="border: 0.1em black solid; margin: auto; width: 50%; border-radius: 3px;">
</div>

